/* pages/goods_detail/goods_detail.wxss */
.detail_swiper swiper {
	height: 70vw;
	text-align: center;
}

.detail_swiper swiper image {
	width: 60%;
}

/* 商品价格 */
.goods_price {
	padding: 15rpx;
	font-size: 32rpx;
	font-weight: 600;
	color: red;
}
/* 商品详情 */
.goods_name_row {
	display: flex;
	border-top: 5rpx solid #dedede;
	border-bottom: 5rpx solid #dedede;
	padding: 10rpx 0;
}
.goods_name_row .goods_name {
	flex: 5;
	color: #000;
	font-size: 30rpx;
	padding: 0 10rpx;
}
.goods_name_row .goods_collect {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

/* 商品的图文详情 */
.goods_info .goods_info_title {
	font-size: 32rpx;
	color: red;
	font-weight: 600;
	padding: 20rpx;
}

/* 底下购物车样式 */
.btm_tool {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background-color: #fff;
	display: flex;
}
.btm_tool .tool_item {
	position: relative;
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	font-size: 24rpx;
}

.btm_tool .btn_cart {
	position: relative;
	flex: 2;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	background-color: #ffa500;
}

.btm_tool .tool_item button {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	opacity: 0;
}

.btm_tool .btn_buy {
	flex: 2;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	background-color: red;
}

