<Tabs tabs="{{tabs}}" bindtabsItemChange="tabsItemChange">
	<block wx:if="{{tabs[0].isActive===true}}">
    <navigator wx:for="{{goodList}}" wx:key="goods_id" url="/pages/goods_detail/goods_detail?goods_id={{item.goods_id}}">
